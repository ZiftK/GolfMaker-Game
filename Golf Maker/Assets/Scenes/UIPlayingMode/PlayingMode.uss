.pause-overlay {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background-color: rgba(0, 0, 0, 0.7);
    justify-content: center;
    align-items: center;
    z-index: 5;
}

.pause-menu {
    padding: 40px;
    background-color: white;
    border-radius: 15px;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    width: 400px;
}
